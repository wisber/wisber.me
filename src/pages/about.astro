---
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import Link from "@/components/Link.astro";
import PageHead from "@/components/PageHead.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import { SITE } from "@/consts";
import Layout from "@/layouts/Layout.astro";
import { getAllProjects } from "@/lib/data-utils";

const projects = await getAllProjects();
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="About" />
  <Breadcrumbs items={[{ label: 'About', icon: 'lucide:info' }]} />

  <section>
    <div class="min-w-full">
      <div class="prose mb-8">
        <p class="mt-0">
          <Link href={SITE.href} external>{SITE.title}</Link> is a forward-thinking software company and consultant agency 
          dedicated to helping businesses thrive in the digital age. We specialize in custom software 
          development, cloud solutions, and strategic IT consulting to drive innovation and growth 
          for our clients.
        </p>
        <p>
          <strong>Stop struggling with your digital transformation.</strong> Leverage the power of AI 
          to streamline your operations, automate repetitive tasks, and unlock data-driven insights. 
          Our team of experts guides you through every step—from strategy to implementation—ensuring 
          you stay ahead of the competition while maximizing ROI on your technology investments.
        </p>
      </div>

      <h2 class="mb-4 text-2xl font-medium">Example Projects Listing</h2>
      <div class="flex flex-col gap-4">
        {projects.map((project) => <ProjectCard project={project} />)}
      </div>
    </div>
  </section>
</Layout>
