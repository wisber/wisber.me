---
import { SITE } from "@/consts";
import { getRecentPosts } from "@/lib/data-utils";

const _blog = await getRecentPosts(SITE.featuredPostCount);
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />
  <section class="relative overflow-hidden rounded-lg border">
    <Neural client:load />
    <div class="relative z-10 flex flex-col space-y-1.5 p-6">
      <h3 class="text-3xl leading-none font-medium">wis·ber·me</h3>
      <p class="text-muted-foreground text-sm">
        /ˈwɪs pə miː/ &bull; <span class="font-medium">adjective</span>
      </p>
    </div>
    <div class="relative z-10 p-6 pt-0">
      <p class="text-muted-foreground mb-2 text-sm">
        Stop struggling with your digital transformation!
      </p>
    </div>
  </section>
  <section class="flex flex-col gap-y-4">
    <h2 class="text-2xl font-medium">Latest posts</h2>
    <ul class="flex flex-col gap-y-4">
      {
        blog.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <Link
        href="/blog"
        class={buttonVariants({ variant: 'ghost' }) + ' group'}
      >
        See all posts <span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>
</Layout>
